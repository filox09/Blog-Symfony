{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mb-5 mt-5">Formulaire d'inscription</h1>

    {{ form_start(form) }}

        {{ form_row(form.username, {'attr' : {'placeholder': "Entrer un nom d'utilisateur" }}) }}
        {{ form_row(form.email, {'attr' : {'placeholder': "Saisir votre e-mail" }}) }}
        {{ form_row(form.password, {'attr' : {'placeholder': "Choisissez un mot de passe" }}) }}
        {{ form_row(form.confirm_password, {'attr' : {'placeholder': "Confirmer le mot de passe" }}) }}
        <button type="submit" class="btn btn-success">Inscription</button>

    {{ form_end(form) }}
{% endblock %}